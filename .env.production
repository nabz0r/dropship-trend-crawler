# Configuration du serveur pour la production
PORT=3000
NODE_ENV=production

# API Brave Search
BRAVE_API_KEY=your_brave_api_key_here

# Base de données
MONGODB_URI=mongodb://mongodb:27017/dropship-crawler

# Logging
LOG_LEVEL=info

# Paramètres du crawler
CRAWL_INTERVAL=3600000  # 1 heure en millisecondes

# Paramètres de performance
# Augmenter cette valeur si vous avez plus de RAM disponible
NODE_OPTIONS="--max-old-space-size=2048"

# Paramètres de sécurité
RATE_LIMIT_WINDOW=15  # Fenêtre de 15 minutes
RATE_LIMIT_MAX=100    # Maximum de 100 requêtes par fenêtre

# Configuration du cache
CACHE_ENABLED=true
CACHE_TTL=300000      # 5 minutes
CACHE_MAX_ITEMS=5000  # Nombre maximum d'éléments en cache

# Paramètres de connexion pour mongo-express
MONGO_EXPRESS_USER=admin
MONGO_EXPRESS_PASSWORD=change_this_password_in_production